print("27 pins, all checked")

LED =  13
print(LED)

PA.write(LED,0)
time.sleep(1)

PA.write(LED,1)
time.sleep(1)

PA.write(LED,0)
time.sleep(1)

PA.write(LED,1)
time.sleep(1)

PA.write(LED,0)

PA.stop()

