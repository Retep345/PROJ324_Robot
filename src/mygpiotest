#!/usr/bin/python

import sys

import pigpio

import time


PA = pigpio.pi()

PA.set_mode(2,pigpio.OUTPUT)
PA.write(2,0)
time.sleep(0.1)
PA.set_mode(3,pigpio.OUTPUT)
PA.write(3,0)
time.sleep(0.1)
PA.set_mode(4,pigpio.OUTPUT)
PA.write(4,0)
time.sleep(0.1)
PA.set_mode(5,pigpio.OUTPUT)
PA.write(5,0)
time.sleep(0.1)
print("5 pins")

#BROKEN PA.set_mode(6,pigpio.OUTPUT)
#BROKEN PA.write(6,0)

